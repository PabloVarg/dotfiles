#!/bin/sh

set -e

SAVE_OPTIONS=("clipboard" "file" "open")
EXTENSION="png"

TMP_DIR="/tmp/scripts/screeshot"
DST_DIR="${HOME}/Screenshots"

TMP_FILE="${TMP_DIR}/screenshot.${EXTENSION}"

create_tmp_dir () {
    [ -d "${TMP_DIR}" ] || mkdir -p "${TMP_DIR}"
}

create_dst_dir () {
    [ -d "${DST_DIR}" ] || mkdir "${DST_DIR}"
}

clean_tmp_files () {
    rm "${TMP_FILE}"
}

ask_name () {
    local timestamp

    timestamp=$(date '+%y%m%d-%H%M-%S')
    DST_FILE="$(prompt_open "File Name" "screenshot-${timestamp}").${EXTENSION}"
}

prepare_destination_path () {
    create_dst_dir
    ask_name
}

take_screenshot () {
    local target
    local window

    create_tmp_dir

    [[ -z $1 ]] && target='full-screen' || target="$1"

    case "$target" in
        'area')
            grim -t "${EXTENSION}" -g "$(slurp)" - > $TMP_FILE
            ;;
        'current-window')
            grim -g "$(swaymsg -t get_tree | jq -j '.. | select(.type?) | select(.focused).rect | "\(.x),\(.y) \(.width)x\(.height)"')" - > $TMP_FILE
            ;;
        'full-screen')
            grim -t "${EXTENSION}" -o $(swaymsg -t get_outputs | jq -r '.[] | select(.focused) | .name') - > $TMP_FILE
            ;;
        *)
            echo "Invalid target $target"
            exit 1
            ;;
    esac
}

save_screenshot () {
    declare action

    [[ -z $1 ]] && action="$(prompt_open "Action" "$(printf "%s\n" "${SAVE_OPTIONS[@]}")")" || action="$1"

    case "$action" in
        'clipboard')
            cat "${TMP_FILE}" | wl-copy
            ;;
        'file')
            prepare_destination_path
            cp "${TMP_FILE}" "${DST_DIR}/${DST_FILE}"
            ;;
        'open')
            sxiv "${TMP_FILE}"
            ;;
        *)
            echo "Invalid action $action"
            exit 1
            ;;
    esac

    clean_tmp_files
}

take_screenshot "$1"
save_screenshot "$2"
