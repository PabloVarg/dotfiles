# Programs
alias _='sudo'
alias vim='nvim'
alias e='vim'
alias update='yay -Syyu && clean'
alias clean='yay -Sc --noconfirm'

# Colors
alias ls='ls --color=auto --group-directories-first'
alias grep='grep --color=auto'
alias egrep='egrep --color=auto'
alias fgrep='fgrep --color=auto'
alias diff='diff --color=auto'

# Common commands
alias -- -='cd -'
alias ...=../..
alias ....=../../..
alias .....=../../../..
alias ......=../../../../..
alias 1='cd -'
alias 2='cd -2'
alias 3='cd -3'
alias 4='cd -4'
alias 5='cd -5'
alias 6='cd -6'
alias 7='cd -7'
alias 8='cd -8'
alias 9='cd -9'
alias l='ls -lh'
alias l.='ls -d .* --color=auto'
alias la='ls -lAh'
alias ll='ls -lah'
alias ka='killall'
alias mv='mv -i'
alias cp='cp -i'
alias ln='ln -i'
alias df='df -H'
alias cc='clear'

# Utils
alias ports='ss -tulanp'
alias usb='udisksctl mount -b'
alias usbunmount='udisksctl unmount -b'
alias vup='sudo systemctl start libvirtd.service && sudo virsh net-start default && virsh start archlinux-dev'
alias vdown='sudo virsh net-destroy default && sudo systemctl stop libvirtd.service'

# Keyboard layouts
alias aoeu='keyboard qwerty'
alias asdf='keyboard dvorak'
